<project>

    <target name="clean">
        <exec executable="./gradlew" dir="../../">
            <arg value="clean"/>
        </exec>
    </target>

    <target name="build">
        <exec executable="./gradlew" dir="../../">
            <arg value="build"/>
        </exec>
    </target>

    <target name="mandelbrot.single">
        <java classname="com.leon.mandelbrot.standard.Mandelbrot">
            <classpath>
                <pathelement location="../../build/classes/main"/>
            </classpath>
        </java>
    </target>

    <target name="mandelbrot.video">
        <java classname="com.leon.mandelbrot.standard.MandelbrotAnimation">
            <classpath>
                <pathelement location="../../build/classes/main"/>
            </classpath>
        </java>
    </target>

</project>